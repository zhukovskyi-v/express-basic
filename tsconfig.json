{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "node_modules"
  ]
}
